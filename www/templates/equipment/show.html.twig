{% extends 'base.html.twig' %}

{% block title %}Equipement{% endblock %}

{% block body %}
    <div class="camping-detail-card">
		<div class="camping-detail-content">
			<h1 class="camping-title">{{equipment.label|slice(0,30)}}</h1>

            <div class="camping-info-detail mb-4">
                <div class="info-item">
                    <span class="info-label">Nom : </span>
                    </span>
                    <span class="info-value">{{equipment.label}}</span>
					<span class="info-label">Activé :</span>
					<span class="info-value">{{equipment.isActive ? 'Oui' : 'Non' }}</span>
                </div>
			</div>
		</div>
	</div>

    <div class="action-buttons">
		<div>
			<div>
				{% if equipment.isActive %}
					{% include 'equipment/_desactivate_form.html.twig' %}
				{% else %}
					{% include 'equipment/_activate_form.html.twig' %}
				{% endif %}
			</div>
		</div>
		<div>
			<a href="{{ path('app_equipment_edit', {'id': equipment.id}) }}" class="btn btn-edit">Editer</a>
		</div>
		<div>
			<a href="{{path('app_equipment_index')}}" class="btn btn-back">
				<i class="fas fa-arrow-left"></i>Retour à la liste</a>
		</div>
    </div>
{% endblock %}
