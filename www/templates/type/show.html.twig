{% extends 'base.html.twig' %}

{% block title %}Type de logement{% endblock %}

{% block body %}
    <div class="camping-detail-card">
        <div class="camping-detail-image">
			<img src="{{asset('images/types/' ~ type.imagePath)}}" alt="{{type.label}}">
		</div>
        <div class="camping-detail-content">
            <h1 class="camping-title">{{type.label}}</h1>
            <div class="camping-info-detail mb-4">
                <div class="info-item">
                    <span class="info-label">Nom : </span>
                    </span>
                    <span class="info-value">{{type.label}}</span>
                </div>
            </div>

            <div class="camping-info-detail mb-4">
                <div class="info-item">
                    <span class="info-label">Prix : </span>
                    <span class="info-value">{{(type.price/100)|number_format}}</span>
                </div>
            </div>
            
            <div class="action-buttons">
                <div>
                    {% if type.isActive %}
                        {% include 'type/_desactivate_form.html.twig' %}
                    {% else %}
                        {% include 'type/_activate_form.html.twig' %}
                    {% endif %}
                </div>
                <div>
                    <a href="{{ path('app_type_edit', {'id': type.id}) }}" class="btn btn-edit">Editer</a>
                </div>
                <div>
                    <a href="{{path('app_type_index')}}" class="btn btn-back">
                        <i class="fas fa-arrow-left"></i>Retour Ã  la liste</a>
                </div>
            </div>
        </div>
    </div>

    
{% endblock %}
