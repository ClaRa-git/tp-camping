
{{ form_start(form, {'attr': {'class': 'camping-form'}}) }}
{{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.label) }}
        {{ form_widget(form.label) }}
        {{ form_errors(form.label) }}
    </div>

    <div class="form-group">
        {{ form_label(form.imagePath) }}

        {# Si une image actuelle est pr√©sente, on l'affiche #}
        {% if form.currentImage is defined and form.currentImage.vars.value %}
            <div class="current-image">
                <label>Image actuelle :</label>
                <img src="{{ asset('images/types/' ~ form.currentImage.vars.value) }}" 
                    alt="Image actuelle" 
                    style="max-width: 150px; margin-bottom: 10px;">
            </div>
        {% endif %}

        {{ form_widget(form.imagePath) }}
        {{ form_errors(form.imagePath) }}
    </div>

    <div class="form-group">
        {{form_label(form.prices)}}
        <div class="console-switches">
            {% for price in form.prices %}
                <div class="form-switch">
                    {{form_widget(price, {'attr': {'class': 'form-check-input'}})}}
                    {{form_label(price, null, {'attr': {'class': 'form-check-label'}})}}
                </div>            
            {% endfor %}
        </div>
        {{form_errors(form.prices)}}
    </div>

    <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        {{ button_label|default('Enregistrer') }}
    </button>

{{ form_end(form) }}
