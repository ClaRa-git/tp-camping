<h2>{{title}}</h2>
<table class="camping-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Label</th>
            <th>Date de début</th>
            <th>Date de fin</th>
            <th>Prix</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for price in prices %}
        <tr>
            <td>{{ price.id }}</td>
            <td>{{ price.label}}</td>
            <td>{{ price.dateStart|date('d/m/Y') }}</td>
            <td>{{ price.dateEnd|date('d/m/Y') }}</td>
            <td>{{ (price.price/100)|number_format }}</td>
            <td>
                <div class="camping-actions">
                    <a href="{{path('app_price_show', {'id': price.id})}}" class="view-link">Voir</a>
                    <a href="{{path('app_price_edit', {'id': price.id})}}" class="edit-link">Editer</a>
                </div>                    
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6">Pas de prix trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

