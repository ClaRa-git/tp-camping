        <h2>{{title}}</h2>
        <table class="camping-table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Nom d'utilisateur</th>
                    <th>Prénom</th>
                    <th>Nom</th>
                    <th>Actif</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles|badge_user }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.firstname }}</td>
                    <td>{{ user.lastname }}</td>
                    <td>{{ user.isActive ? 'Oui' : 'Non' }}</td>
                    <td>
                        <div class="camping-actions">
                            <a href="{{path('app_user_show', {'id': user.id})}}" class="view-link">Voir</a>
                            <a href="{{path('app_user_edit', {'id': user.id})}}" class="edit-link">Editer</a>
                        </div>                    
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Pas d'utlisateur trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
